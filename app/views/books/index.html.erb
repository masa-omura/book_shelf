<% @books.each do |book| %>
  <div class="col-lg-3 col-md-4 col-sm-6 md-3">
    <%= show_book_image book %>
    <h4 class="mt2"><%= link_to book.title, book_path(book) %></h4>
    <div><%= t(".price_yen", price: (number_with_delimiter book.price)) %></div>
    <p><%= truncate(book.description, length: 20) %></p>
  </div>
<% end %>

<div class="col-12">
  <%= paginate @books %>
</div>